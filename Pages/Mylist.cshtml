@page
@model MyModel
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>


<div id="my-template">
  <div class="flex justify-center mt-8">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-4">
      <h1 class="text-3xl font-bold text-center mb-4">Things To Do</h1>
<ul class="flex-col flex">
  <li
    v-for="(item, index) in todoList"
    :key="index"
    class="cursor-pointer inline-block rounded-full bg-gray-200 py-1 px-3 mr-2 mb-2 relative hover:bg-red-500"
    v-on:click="removeItem(index)"
  >
    {{ item }}
  </li>
</ul>

      <form class="mb-4"v-on:submit.prevent="addItem">
        <input
          v-model="newItem"
          type="text"
          class="block w-full p-2 rounded-lg mb-2 bg-gray-800 text-gray-100"
          placeholder="Add a new to-do item"
        />
        <button
          type="submit"
          class="w-full p-2 rounded-lg bg-blue-500 text-white font-bold"
        >
          Add
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  new Vue({
    el: '#my-template',
    data: {
      todoList: ['To-do item 1', 'To-do item 2', 'To-do item 3'],
      newItem: ''
    },
    methods: {
      addItem() {
        // Add the new item to the list
        this.todoList.push(this.newItem)
        // Clear the input field
        this.newItem = ''
      },
      removeItem(index) {
        // Remove the item from the list
        this.todoList.splice(index, 1)
      }
    }
  })
</script>

@functions {
  public class MyModel
  {
    // model code here
  }
}
